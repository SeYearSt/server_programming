@model IEnumerable<Lab2.Models.Sage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.Raw(String.Join("; ", item.Books.Select(x => Html.ActionLink(x.name.ToString(), "Details", "Books", new { id = x.IdBook }, null))))<!--x.name)))-->
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.IdSage }) |
        </td>
    </tr>
}

</table>
