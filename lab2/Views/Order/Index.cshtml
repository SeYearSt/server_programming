@model IEnumerable<Lab2.Models.OrderBook>

@if (Model.Count() == 0)
{
    <div class="jumbotron">
        <h2>Корзина пуста</h2>
        <p class="lead">Ви ще не зробили жодного замовлення.</p>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Book.name.ToString(), "Details", "Books", new { id = item.Book.IdBook }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Book.IdBook }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Book.IdBook })
                </td>
            </tr>
        }
    </table>
}
